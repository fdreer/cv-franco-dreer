---
import Container from '@/components/ui/Container.astro'
import myFormation from '../../public/data/my-formation.json'
---

<Container>
    <section class="data">
        <h2>Formaci√≥n</h2>
        <ul>
            {
                myFormation.map(
                    ({
                        title,
                        institution,
                        description,
                        timeFrame
                    }: Formation) => {
                        return (
                            <li>
                                <div>
                                    <h3>
                                        {title}, {institution}
                                    </h3>
                                    {timeFrame ? (
                                        <span>
                                            {timeFrame.startDate} -
                                            {timeFrame.endDate}
                                        </span>
                                    ) : null}
                                </div>
                                {description && <p>{description}</p>}
                            </li>
                        )
                    }
                )
            }
        </ul>
    </section>
</Container>

<style>
    ul {
        display: flex;
        flex-direction: column;
        gap: 20px;
    }
    li {
        div {
            margin-bottom: 5px;

            span {
                font-weight: 500;
                font-size: 0.9rem;
                color: #666;
            }
        }

        p {
            font-size: 1.125rem;
        }
    }
</style>
